generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Flashcard {
  id         Int        @id @default(autoincrement())
  category   String?
  question   String
  answer     String
  difficulty Difficulty @default(EASY)
  tags       String[]   @default([])
}

enum Difficulty {
  EASY
  MEDIUM
  HARD
}
